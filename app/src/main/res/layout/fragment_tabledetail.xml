<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/windowBackgroundColor"
              android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="40dp"
                  android:orientation="horizontal">
        <Button android:id="@+id/bt_pre" android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:background="@color/colorPrimary"
                android:text="上一页" android:textColor="@color/textPrimary"/>
        <Button android:id="@+id/bt_next" android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:background="@color/colorPrimary"
                android:text="下一页" android:textColor="@color/textPrimary"/>
        <TextView android:id="@+id/tv_page" android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="left|center_vertical"
                  android:text="第1页" android:textColor="@color/textPrimary"/>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:dividerHeight="1px"
            android:divider="#000"
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
    </HorizontalScrollView>
</LinearLayout>